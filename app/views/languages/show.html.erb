<h1><img src="<%= @language.logo_image%>" alt="language"></h1>
<h2><%= @language.name%></h2>
<p><%= @language.description%></p> 
 <p>Companies that use this language:</p>   
<ul>
    <% @language.companies.each do |company| %>
        <li><%= company.name %></li> 
        <% end %>
    </ul>
<form action="/languages/<%=@language.id%>"method="post">
    <input type="hidden" name="_method" value="delete"><br> 
    <% if @language.user == current_user %>
        <button type="submit">Delete Language</button>
    <% end %>
</form>